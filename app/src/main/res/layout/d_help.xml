<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/d_dialog_box_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:measureWithLargestChild="true"
    tools:context="pl.understandable.understandable_app.dialogs.help.HelpDialog"
    android:id="@+id/d_help" >

    <LinearLayout
        android:id="@+id/d_help_content_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/f_border_margin_large"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_button_field_height"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@id/d_help_content_area">

        <Button
            android:id="@+id/d_help_button_previous"
            android:layout_width="@dimen/button_small_small_width"
            android:layout_height="@dimen/button_small_small_height"
            android:layout_marginRight="@dimen/f_choice_button_margin"
            android:clickable="true"
            android:text="@string/button_previous_page"
            android:textAllCaps="false"
            android:textSize="@dimen/button_text" />

        <Button
            android:id="@+id/d_help_button_next"
            android:layout_width="@dimen/button_small_small_width"
            android:layout_height="@dimen/button_small_small_height"
            android:layout_marginLeft="@dimen/f_choice_button_margin"
            android:clickable="true"
            android:text="@string/button_next_page"
            android:textAllCaps="false"
            android:textSize="@dimen/button_text" />

    </LinearLayout>
</RelativeLayout>
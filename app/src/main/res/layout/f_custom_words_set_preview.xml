<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    tools:context="pl.understandable.understandable_dev_app.fragments.custom_words.other.CustomWordsSetPreviewFragment"
    android:id="@+id/f_custom_words_set_preview" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:measureWithLargestChild="true" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_marginLeft="@dimen/f_border_margin_large"
            android:layout_marginRight="@dimen/f_border_margin_large"
            android:orientation="vertical">

            <TextView
                android:id="@+id/f_custom_words_set_preview_words_set_name_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/f_custom_words_set_preview_words_set_name_info"
                android:textColor="?attr/text_1_color"
                android:textSize="@dimen/f_custom_words_set_preview_words_set_name_info" />

            <LinearLayout
                android:id="@+id/f_custom_words_set_preview_name_field"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:gravity="center" >

                <TextView
                    android:id="@+id/f_custom_words_set_preview_words_set_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="?attr/text_1_color"
                    android:textSize="@dimen/f_custom_words_set_preview_words_set_name" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_marginLeft="@dimen/f_border_margin_large"
            android:layout_marginRight="@dimen/f_border_margin_large"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/f_custom_words_set_preview_words_set_id_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/f_custom_words_set_preview_words_set_id_info"
                android:textSize="@dimen/f_custom_words_set_preview_words_set_id_info"
                android:textColor="?attr/text_1_color" />

            <LinearLayout
                android:id="@+id/f_custom_words_set_preview_id_field"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:gravity="center" >

                <TextView
                    android:id="@+id/f_custom_words_set_preview_words_set_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/f_custom_words_set_preview_words_set_id"
                    android:textColor="?attr/text_1_color" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:layout_marginLeft="@dimen/f_border_margin_large"
            android:layout_marginRight="@dimen/f_border_margin_large"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/f_custom_words_set_preview_words_set_description_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/f_custom_words_set_preview_words_set_description_info"
                android:textColor="?attr/text_1_color"
                android:textSize="@dimen/f_custom_words_set_preview_words_set_description_info" />

            <LinearLayout
                android:id="@+id/f_custom_words_set_preview_description_field"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center" >

                <TextView
                    android:id="@+id/f_custom_words_set_preview_words_set_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="?attr/text_1_color"
                    android:textSize="@dimen/f_custom_words_set_preview_words_set_description" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/f_custom_words_set_preview_button_delete"
                android:layout_width="@dimen/button_small_width"
                android:layout_height="@dimen/button_small_height"
                android:layout_gravity="bottom"
                android:clickable="true"
                android:text="@string/button_delete"
                android:textAllCaps="false"
                android:textColor="?attr/text_button_color"
                android:textSize="@dimen/button_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/f_custom_words_set_preview_button_start_learning"
                android:layout_width="@dimen/button_small_width"
                android:layout_height="@dimen/button_small_height"
                android:layout_gravity="center"
                android:text="@string/button_start_learning"
                android:textSize="@dimen/button_text"
                android:textAllCaps="false"
                android:textColor="?attr/text_button_color"
                android:clickable="true" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

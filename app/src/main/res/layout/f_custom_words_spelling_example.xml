<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    tools:context="pl.understandable.understandable_app.fragments.custom_words.spelling.CustomWordsSpellingExampleFragment"
    android:id="@+id/f_custom_words_spelling_example" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:measureWithLargestChild="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" >

        </LinearLayout>

        <TextView
            android:id="@+id/f_custom_words_spelling_example_word_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="Word0"
            android:textColor="?attr/background_color"
            android:textSize="@dimen/f_spelling_example_word_1" />

        <TextView
            android:id="@+id/f_custom_words_spelling_example_word_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="Word1"
            android:textColor="?attr/background_color"
            android:textSize="@dimen/f_spelling_example_word_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" >

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

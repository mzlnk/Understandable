<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    tools:context="pl.understandable.understandable_app.fragments.grammar.fill_gap.GrammarFillGapExampleFragment"
    android:id="@+id/f_grammar_fill_gap_example" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:measureWithLargestChild="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" >

        </LinearLayout>

        <TextView
            android:id="@+id/f_grammar_fill_gap_example_sentence"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="Word0"
            android:textColor="?attr/background_color"
            android:textSize="@dimen/f_repetition_example_word_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" >

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

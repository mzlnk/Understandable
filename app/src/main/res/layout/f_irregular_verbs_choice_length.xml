<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    tools:context="net.heliantum.understandable.fragments.irregular_verbs.choice.IrregularVerbsChoiceLengthFragment"
    android:id="@+id/f_irregular_verbs_choice_length" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:measureWithLargestChild="true" >


        <TextView
            android:id="@+id/f_irregular_verbs_choice_length_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.05"
            android:gravity="center"
            android:text="@string/f_irregular_verbs_choice_length_title"
            android:textSize="@dimen/f_text_title_medium"
            android:textColor="?attr/text_1_color" />

        <TextView
            android:id="@+id/f_irregular_verbs_choice_length_size_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="0"
            android:textColor="?attr/text_1_color"
            android:textSize="@dimen/f_irregular_verbs_choice_length_words_amount"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="top" >

            <SeekBar
                android:id="@+id/f_irregular_verbs_choice_length_size_adjust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/f_irregular_verbs_choice_length_back"
                android:layout_width="@dimen/button_small_width"
                android:layout_height="@dimen/button_small_height"
                android:layout_marginRight="@dimen/f_irregular_verbs_choice_button_margin"
                android:text="@string/button_back"
                android:textSize="@dimen/button_back"
                android:textAllCaps="false"
                android:textColor="?attr/text_button_color"
                android:background="@drawable/button_1"
                android:clickable="true" />

            <Button
                android:id="@+id/f_irregular_verbs_choice_length_submit"
                android:layout_width="@dimen/button_small_width"
                android:layout_height="@dimen/button_small_height"
                android:layout_marginLeft="@dimen/f_irregular_verbs_choice_button_margin"
                android:background="@drawable/button_2"
                android:clickable="true"
                android:text="@string/button_start"
                android:textAllCaps="false"
                android:textColor="?attr/text_button_color"
                android:textSize="@dimen/button_start" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

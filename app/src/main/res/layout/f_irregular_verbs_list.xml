<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    tools:context="net.heliantum.understandable.fragments.irregular_verbs.list.IrregularVerbsListFragment"
    android:id="@+id/f_irregular_verbs_list" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:measureWithLargestChild="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" >

        <TextView
            android:id="@+id/f_irregular_verbs_list_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:gravity="center"
            android:text="@string/f_irregular_verbs_list_title"
            android:textColor="?attr/text_1_color"
            android:textSize="@dimen/f_text_title_medium" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.85"
            android:layout_marginBottom="@dimen/f_border_margin"
            android:layout_marginRight="@dimen/f_border_margin"
            android:layout_marginLeft="@dimen/f_border_margin" >

            <TableLayout
                android:id="@+id/f_irregular_verbs_list_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="*" >

            </TableLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>

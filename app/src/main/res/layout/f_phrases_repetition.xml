<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    tools:context="pl.understandable.understandable_app.fragments.phrases.repetition.PhrasesRepetitionFragment"
    android:id="@+id/f_phrases_repetition" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:measureWithLargestChild="true" >

        <android.support.v4.view.ViewPager
            android:id="@+id/f_phrases_repetition_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:measureWithLargestChild="true" >

            <TableRow
                android:layout_weight="0.4"
                android:gravity="center"
                android:measureWithLargestChild="true" >

                <Button
                    android:id="@+id/f_phrases_repetition_repeat"
                    android:layout_width="@dimen/button_small_width"
                    android:layout_height="@dimen/button_small_height"
                    android:text="@string/button_repeat"
                    android:textColor="?attr/text_button_color"
                    android:textAllCaps="false"
                    android:textSize="@dimen/button_repeat" />

            </TableRow>

            <TableRow
                android:layout_weight="0.4"
                android:gravity="center"
                android:measureWithLargestChild="true" >

                <Button
                    android:id="@+id/f_phrases_repetition_finish"
                    android:layout_width="@dimen/button_small_width"
                    android:layout_height="@dimen/button_small_height"
                    android:text="@string/button_finish"
                    android:textColor="?attr/text_button_color"
                    android:textAllCaps="false"
                    android:textSize="@dimen/button_finish" />

            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>

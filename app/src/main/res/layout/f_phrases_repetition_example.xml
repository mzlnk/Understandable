<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    tools:context="pl.understandable.understandable_dev_app.fragments.phrases.repetition.PhrasesRepetitionExampleFragment"
    android:id="@+id/f_phrases_repetition_example" >

    <LinearLayout
        android:id="@+id/f_phrases_repetition_example_clickable_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:measureWithLargestChild="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" >

        </LinearLayout>

        <TextView
            android:id="@+id/f_phrases_repetition_example_word_0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:textColor="?attr/background_color"
            android:textSize="@dimen/f_repetition_example_word_1" />

        <TextView
            android:id="@+id/f_phrases_repetition_example_word_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:textColor="?attr/background_color"
            android:textSize="@dimen/f_repetition_example_word_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4" >

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.heliantum.understandable.fragments.quiz.QuizResultFragment"
    android:id="@+id/f_quiz_result" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:measureWithLargestChild="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/f_quiz_result_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="@string/f_quiz_result_title"
            android:textColor="@color/default_black"
            android:textSize="@dimen/f_quiz_result_title" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:measureWithLargestChild="true">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:gravity="center" >

                <TextView
                    android:id="@+id/f_quiz_result_questions_amount"
                    android:gravity="center"
                    android:text="@string/number_0"
                    android:textStyle="bold"
                    android:textColor="@color/default_gray"
                    android:textSize="@dimen/f_quiz_result_questions_amount" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.67"
                android:gravity="center" >

                <TextView
                    android:id="@+id/f_quiz_result_questions_amount_info"
                    android:text="@string/f_quiz_result_questions_amount_info"
                    android:textColor="@color/default_black"
                    android:textSize="@dimen/f_quiz_result_answers_amount_info" />

            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.05" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:stretchColumns="*"
            android:measureWithLargestChild="true" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:measureWithLargestChild="true" >

                <TextView
                    android:layout_weight="0.03" />

                <TableLayout
                    android:id="@+id/f_quiz_result_correct_answers_field"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:background="@drawable/table_rounded_black"
                    android:measureWithLargestChild="true"
                    android:clickable="true" >

                    <TableRow
                        android:layout_weight="0.125"
                        android:layout_height="0dp" >

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/f_quiz_result_correct_answers_img"
                            android:layout_width="@dimen/f_quiz_result_image_width"
                            android:layout_height="@dimen/f_quiz_result_image_height"
                            android:clickable="true"
                            app:srcCompat="@drawable/f_quiz_result_correct_answer" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/f_quiz_result_correct_answers_amount"
                            android:gravity="center"
                            android:text="@string/number_0"
                            android:textStyle="bold"
                            android:textColor="@color/default_gray"
                            android:textSize="@dimen/f_quiz_result_correct_answers_amount" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/f_quiz_result_correct_answers_info"
                            android:gravity="center"
                            android:text="@string/f_quiz_result_correct_answers_info"
                            android:textColor="@color/default_black"
                            android:textSize="@dimen/f_quiz_result_correct_answers_amount_info" />

                    </TableRow>

                    <TableRow
                        android:layout_height="0dp"
                        android:layout_weight="0.125" >

                    </TableRow>
                </TableLayout>

                <TextView
                    android:layout_weight="0.03" />

                <TableLayout
                    android:id="@+id/f_quiz_result_incorrect_answers_field"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:background="@drawable/table_rounded_black"
                    android:measureWithLargestChild="true"
                    android:clickable="true" >

                    <TableRow
                        android:layout_height="0dp"
                        android:layout_weight="0.125" >

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/f_quiz_result_incorrect_answers_img"
                            android:layout_width="@dimen/f_quiz_result_image_width"
                            android:layout_height="@dimen/f_quiz_result_image_height"
                            android:clickable="true"
                            app:srcCompat="@drawable/f_quiz_result_incorrect_answer" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/f_quiz_result_incorrect_answers_amount"
                            android:gravity="center"
                            android:text="@string/number_0"
                            android:textStyle="bold"
                            android:textColor="@color/default_gray"
                            android:textSize="@dimen/f_quiz_result_incorrect_answers_amount" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/f_quiz_result_incorrect_answers_info"
                            android:gravity="center"
                            android:text="@string/f_quiz_result_incorrect_answers_info"
                            android:textColor="@color/default_black"
                            android:textSize="@dimen/f_quiz_result_incorrect_answers_amount_info" />

                    </TableRow>

                    <TableRow
                        android:layout_height="0dp"
                        android:layout_weight="0.125" >

                    </TableRow>
                </TableLayout>

                <TextView
                    android:layout_weight="0.03"/>

            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:gravity="center">

            <Button
                android:id="@+id/f_quiz_result_try_again"
                android:layout_width="@dimen/button_medium_width"
                android:layout_height="@dimen/button_medium_height"
                android:layout_gravity="center"
                android:text="@string/button_try_again"
                android:textSize="@dimen/button_try_again"
                android:textAllCaps="false"
                android:textColor="@color/default_white"
                android:background="@drawable/button_rounded_light_blue"
                android:clickable="true" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

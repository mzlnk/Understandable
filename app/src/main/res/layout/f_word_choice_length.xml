<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.heliantum.ziedic.fragments.choice.WordsChoiceLengthFragment"
    android:id="@+id/f_words_choice_length" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:measureWithLargestChild="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/f_words_choice_length_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="@string/f_words_choice_length_title"
                android:textSize="@dimen/f_words_choice_title_size"
                android:textColor="@color/default_black" />

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.91"
            android:gravity="center" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/f_words_choice_length_size_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/f_words_choice_title_size"
                    android:textColor="@color/default_black" />

            </TableRow>

            <TableRow
                android:measureWithLargestChild="true" >

                <SeekBar
                    android:id="@+id/f_words_choice_length_size_adjust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8" />

            </TableRow>
        </TableLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:stretchColumns="*"
            android:measureWithLargestChild="true"
            android:gravity="bottom" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:measureWithLargestChild="true" >

                <Button
                    android:id="@+id/f_words_choice_length_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.47"
                    android:text="@string/f_words_choice_back"
                    android:textSize="@dimen/f_words_choice_text_button_size"
                    android:textAllCaps="false"
                    android:textColor="@color/default_white"
                    android:background="@drawable/button_rounded_light_blue"
                    android:clickable="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.06" />

                <Button
                    android:id="@+id/f_words_choice_length_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.47"
                    android:text="@string/f_words_choice_start"
                    android:textSize="@dimen/f_words_choice_text_button_size"
                    android:textAllCaps="false"
                    android:textColor="@color/default_white"
                    android:background="@drawable/button_rounded_lime"
                    android:clickable="true" />

            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>

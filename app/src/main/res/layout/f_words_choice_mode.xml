<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.words.choice.WordsChoiceModeFragment"
    android:background="?attr/background_color"
    android:id="@+id/f_words_choice_mode" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:measureWithLargestChild="true" >

        <TextView
            android:id="@+id/f_words_choice_mode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.05"
            android:gravity="center"
            android:text="@string/f_words_choice_mode_title"
            android:textSize="@dimen/f_text_title_medium"
            android:textColor="?attr/text_1_color" />

        <TableLayout
            android:id="@+id/f_words_choice_mode_names_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:stretchColumns="*" >

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/f_words_choice_mode_back"
                android:layout_width="@dimen/button_small_width"
                android:layout_height="@dimen/button_small_height"
                android:layout_marginRight="@dimen/f_choice_button_margin"
                android:text="@string/button_back"
                android:textSize="@dimen/button_back"
                android:textAllCaps="false"
                android:textColor="?attr/text_button_color"
                android:background="@drawable/button_1"
                android:clickable="true" />

            <Button
                android:id="@+id/f_words_choice_mode_submit"
                android:layout_width="@dimen/button_small_width"
                android:layout_height="@dimen/button_small_height"
                android:layout_marginLeft="@dimen/f_choice_button_margin"
                android:text="@string/button_next"
                android:textSize="@dimen/button_next"
                android:textAllCaps="false"
                android:textColor="?attr/text_button_color"
                android:background="@drawable/button_1"
                android:clickable="true" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.heliantum.ziedic.fragments.choice.WordsChoiceModeFragment"
    android:id="@+id/f_words_choice_mode" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:measureWithLargestChild="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/f_words_choice_mode_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/f_words_choice_mode_title"
                android:textSize="@dimen/f_words_choice_mode_title"
                android:textColor="@color/default_black" />

        </LinearLayout>

        <TableLayout
            android:id="@+id/f_words_choice_mode_names_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.91"
            android:orientation="horizontal"
            android:stretchColumns="*" >

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:gravity="bottom"
            android:stretchColumns="*"
            android:measureWithLargestChild="true" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:measureWithLargestChild="true" >

                <Button
                    android:id="@+id/f_words_choice_mode_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.47"
                    android:text="@string/button_back"
                    android:textSize="@dimen/button_back"
                    android:textAllCaps="false"
                    android:textColor="@color/default_white"
                    android:background="@drawable/button_rounded_light_blue"
                    android:clickable="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.06" />

                <Button
                    android:id="@+id/f_words_choice_mode_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.47"
                    android:text="@string/button_next"
                    android:textSize="@dimen/button_next"
                    android:textAllCaps="false"
                    android:textColor="@color/default_white"
                    android:background="@drawable/button_rounded_light_blue"
                    android:clickable="true" />

            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>

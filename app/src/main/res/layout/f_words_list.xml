<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.words.list.WordsListFragment"
    android:background="?attr/background_color"
    android:id="@+id/f_words_list" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:measureWithLargestChild="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" >

        <TextView
            android:id="@+id/f_words_list_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:gravity="center"
            android:text="@string/f_words_list_title"
            android:textColor="?attr/text_1_color"
            android:textSize="@dimen/f_words_list_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.85"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" >

            <TableLayout
                android:id="@+id/f_words_list_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="*" >

            </TableLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>

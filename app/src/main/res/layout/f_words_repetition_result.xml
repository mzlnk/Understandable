<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.heliantum.ziedic.fragments.repetition.WordsRepetitionResultFragment"
    android:id="@+id/f_words_repetition_result" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:measureWithLargestChild="true" >

        <TextView
            android:id="@+id/f_words_repetition_result_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="Koniec"
            android:textColor="@color/default_black"
            android:textSize="@dimen/f_words_repetition_result_title" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:measureWithLargestChild="true" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.33"
                android:measureWithLargestChild="true" >

                <TextView
                    android:id="@+id/f_words_repetition_result_words_seen_amount"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="@string/number_0"
                    android:textStyle="bold"
                    android:textColor="@color/default_gray"
                    android:textSize="@dimen/f_words_repetition_result_words_seen_amount" />

                <TextView
                    android:id="@+id/f_words_repetition_result_words_to_repeat_amount"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="@string/number_0"
                    android:textStyle="bold"
                    android:textColor="@color/default_gray"
                    android:textSize="@dimen/f_words_repetition_result_words_to_repeat_amount" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.67"
                android:gravity="center"
                android:measureWithLargestChild="true">

                <TextView
                    android:id="@+id/f_words_repetition_result_words_seen_info"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="@string/f_words_repetition_result_words_seen_info"
                    android:textColor="@color/default_black"
                    android:textSize="@dimen/f_words_repetition_result_words_seen_info" />

                <TextView
                    android:id="@+id/f_words_repetition_result_words_to_repeat_info"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="@string/f_words_repetition_result_words_to_repeat"
                    android:textColor="@color/default_black"
                    android:textSize="@dimen/f_words_repetition_result_words_to_repeat_info" />

            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.05" />

        <TextView
            android:id="@+id/f_words_repetition_result_words_to_repeat_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:gravity="center"
            android:text="@string/f_words_repetition_result_words_to_repeat_title"
            android:textColor="@color/default_black"
            android:textSize="@dimen/f_words_repetition_result_words_to_repeat_subtitle" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:gravity="top" >

            <TableRow
                android:gravity="top"
                android:measureWithLargestChild="true" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4" />

                <Button
                    android:id="@+id/f_words_repetition_result_view_words_to_repeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/f_words_repetition_result_view_words_to_repeat"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/button_show"
                    android:textAllCaps="false"
                    android:background="@drawable/button_rounded_light_blue" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4" />

            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:gravity="bottom"
            android:stretchColumns="*"
            android:measureWithLargestChild="true" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:measureWithLargestChild="true" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2" />

                <Button
                    android:id="@+id/f_words_repetition_result_try_again"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.8"
                    android:text="@string/button_try_again"
                    android:textSize="@dimen/button_try_again"
                    android:textAllCaps="false"
                    android:textColor="@color/default_white"
                    android:background="@drawable/button_rounded_light_blue"
                    android:clickable="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2" />

            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>

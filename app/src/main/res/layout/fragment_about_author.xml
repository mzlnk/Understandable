<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.heliantum.ziedic.fragments.AboutAuthorFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="www.heliantum.net"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_site"
        android:textSize="16sp"
        android:layout_marginBottom="82dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="400px"
        android:layout_height="122px"
        app:srcCompat="@drawable/heliantum_logo"
        android:id="@+id/logo2"
        android:layout_above="@+id/app_site"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Marcin Zielonka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info1"
        android:textSize="18sp"
        android:layout_marginBottom="135dp"
        android:layout_above="@+id/logo2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="[nazwa aplikacji]"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_name"
        android:textSize="21sp"
        android:layout_marginBottom="53dp"
        android:layout_alignBottom="@+id/info1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info2"
        android:textSize="18sp"
        android:layout_below="@+id/app_name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="wersja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:id="@+id/version_info"
        android:textSize="16sp" />

    <TextView
        android:text="dev0.1.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/version_info"
        android:layout_centerHorizontal="true"
        android:id="@+id/version"
        android:textSize="15sp" />

</RelativeLayout>

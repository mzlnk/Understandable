<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/f_words_choice_layout">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:measureWithLargestChild="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.067" >

            <TextView
                android:text="@string/f_words_choice_category_info"
                android:textSize="@dimen/f_words_choice_title_size"
                android:textColor="@color/default_black"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_words_choice_category_info" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.104" >

            <Button
                android:text="@string/f_words_choice_choose"
                android:textAllCaps="false"
                android:textSize="@dimen/f_words_choice_text_button_size"
                android:textColor="@color/default_white"
                android:background="@drawable/button_rounded_light_blue"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_words_choice_category_button" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.104"
            android:id="@+id/f_words_choice_chosen_categories_row">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/f_words_choice_base_test_selected"
                        android:id="@+id/f_words_choice_chosen_category_0" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/f_words_choice_base_test_selected"
                        android:id="@+id/f_words_choice_chosen_category_1" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/f_words_choice_base_test_selected"
                        android:id="@+id/f_words_choice_chosen_category_2" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/f_words_choice_category_more" />

                </TableRow>

            </TableLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.067" >

            <TextView
                android:text="@string/f_words_choice_type_info"
                android:textSize="@dimen/f_words_choice_title_size"
                android:textColor="@color/default_black"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_words_choice_type_info" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.104" >

            <Button
                android:text="@string/f_words_choice_choose"
                android:textAllCaps="false"
                android:textSize="@dimen/f_words_choice_text_button_size"
                android:textColor="@color/default_white"
                android:background="@drawable/button_rounded_light_blue"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_words_choice_type_button" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.104"
            android:id="@+id/f_words_choice_chosen_types_row" >

            <TableLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/f_words_choice_base_test_selected"
                        android:id="@+id/f_words_choice_type_0" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/f_words_choice_base_test_selected"
                        android:id="@+id/f_words_choice_type_1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/f_words_choice_base_test_selected"
                        android:id="@+id/f_words_choice_type_2" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/f_words_choice_type_more" />
                </TableRow>

            </TableLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.067" >

            <TextView
                android:text="@string/f_words_choice_way_info"
                android:textSize="@dimen/f_words_choice_title_size"
                android:textColor="@color/default_black"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_words_choice_way_info" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.104" >

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:measureWithLargestChild="true" >

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/f_words_choice_base_test_selected"
                        android:id="@+id/f_words_choice_way_0" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/f_words_choice_base_test_unselected"
                        android:id="@+id/f_words_choice_way_1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/f_words_choice_base_test_unselected"
                        android:id="@+id/f_words_choice_way_2" />
                </TableRow>



            </TableLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.067" >

            <TextView
                android:text="@string/f_words_choice_mode_info"
                android:textSize="@dimen/f_words_choice_title_size"
                android:textColor="@color/default_black"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_words_choice_mode_info" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.104" >

            <TableLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:measureWithLargestChild="true" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/f_words_choice_base_test_selected"
                        android:id="@+id/f_words_choice_mode_0" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/f_words_choice_base_test_unselected"
                        android:id="@+id/f_words_choice_mode_1" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" >

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/f_words_choice_mode_info_0" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/f_words_choice_mode_info_1" />
                </TableRow>

            </TableLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.108">

            <Button
                android:text="@string/f_words_choice_start"
                android:textAllCaps="false"
                android:textSize="@dimen/f_words_choice_text_button_size"
                android:textColor="@color/default_white"
                android:background="@drawable/button_rounded_lime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_words_choice_start_button" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
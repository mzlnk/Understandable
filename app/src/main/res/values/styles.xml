<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/navigation_text</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/navigation_item_height</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationDrawerStyle">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">?attr/text_1_color</item>
    </style>

    <style name="NightTheme" parent="AppTheme">
        <item name="background_color">@color/dark_dark_gray</item>
        <item name="text_1_color">@color/white</item>
        <item name="text_2_color">@color/white</item>
        <item name="text_button_color">@color/white</item>
        <item name="button_1_color">@color/gray</item>
        <item name="button_2_color">@color/light_gray</item>
        <item name="button_quiz_option_color">@color/gray</item>
        <item name="button_choice_background_color">@color/light_gray</item>
        <item name="button_choice_symbol_color">@color/dark_gray</item>
        <item name="list_1_color">@color/dark_gray</item>
        <item name="list_2_color">@color/dark_dark_gray</item>
        <item name="accent_color">@color/black</item>
        <item name="table_border_color">@color/gray</item>
        <item name="irregular_verbs_repetition_example_field_1_color">@color/dark_gray</item>
        <item name="irregular_verbs_repetition_example_field_2_color">@color/gray</item>
        <item name="bottom_line_color">@color/light_gray</item>
    </style>

    <style name="DefaultTheme" parent="AppTheme">
        <item name="background_color">@color/white</item>
        <item name="text_1_color">@color/black</item>
        <item name="text_2_color">@color/dark_gray</item>
        <item name="text_button_color">@color/white</item>
        <item name="button_1_color">@color/pink</item>
        <item name="button_2_color">@color/light_pink</item>
        <item name="button_quiz_option_color">@color/light_light_gray</item>
        <item name="button_choice_background_color">@color/dark_gray</item>
        <item name="button_choice_symbol_color">@color/white</item>
        <item name="list_1_color">@color/light_light_light_pink</item>
        <item name="list_2_color">@color/white</item>
        <item name="accent_color">@color/dark_dark_gray</item>
        <item name="table_border_color">@color/light_gray</item>
        <item name="irregular_verbs_repetition_example_field_1_color">@color/light_gray</item>
        <item name="irregular_verbs_repetition_example_field_2_color">@color/light_light_gray</item>
        <item name="bottom_line_color">@color/dark_gray</item>
    </style>

    <style name="MessageDialog" parent="ThemeOverlay.AppCompat.Light" >
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">10%</item>
    </style>

</resources>
